@model Gryffindor.Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = User.Identity.IsAuthenticated ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="divHeading">@ViewBag.Title</div>
<hr>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)
    @Html.HiddenFor(model => model.OldPassword)
    @Html.HiddenFor(model => model.ResetToken)

    <div class="divSubHeading">Reset your password</div>

    <div class="editProfileContainer">
        <ol>
            <li>
                <p class="label">@Html.LabelFor(m => m.Email)</p>
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "form-control" })
            </li>

            <li>
                <p class="label">@Html.LabelFor(m => m.Password)</p>
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })
            </li>

            <li>
                <p class="label">@Html.LabelFor(m => m.ConfirmPassword)</p>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "ConfirmPassword", @class = "form-control" })
            </li>
        </ol>

        <ol>
            <li>
                <button type="submit" class="greenBackground">
                    Reset
                </button>
            </li>
        </ol>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
