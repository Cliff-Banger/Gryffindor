@using (Html.BeginForm("Results", "Search", FormMethod.Post, new { enctype = "multipart/form-data", autocomplete = "Off" }))
{
    @Html.AntiForgeryToken()
    <div id="actionBarSearch" class="defaultBackground">
        <button class="btnClose" type="button">X</button>
        <ul>
            <li style="width: 64%; max-width:418px">
                <input type="search" name="searchText" id="searchText" required placeholder="Search jobs, people, posts" style="width:100%;">
            </li>
            <li style="width: 20%; max-width:80px">
                <input type="submit" value="Search">
            </li>
        </ul>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}