@model Gryffindor.Web.Models.FeedsViewModel
@{
    ViewBag.Title = "Home";
}
<input type="hidden" id="pageSize" value="5">
<div class="message" style="text-align:center;margin:0">@ViewBag.Message</div>

<link href="~/Content/Styles/swiper.min.css" rel="stylesheet" />
<style>
    .qualificationIcon {width:57px;min-width:40px;}
    .qualificationListItem {height:57px; width: 16%!important;}
    .postIcon{padding:0;border-radius:0}
    .content{background-color:transparent}
    div#jobPicks .postContainer { margin: 0; }
    div#jobPicks .postText {display: table-cell;padding: 0px 37px;}
    .swiper-container {
        width: 100%;
        height: 300px;
        margin: 0 auto 50px auto;
    }
    .swiper-slide {
        background: #f1f1f1;
    }
</style>


    <a href="@Url.Action("Wizard", "Resume")">
        <div class="postContainer defaultBackground navOption">
            <div class="icon hammerIcon">
            </div>
            <div class="navOptionDescription">
                Build My CV
            </div>
        </div>
    </a>

    <div class="divSubHeading">Job Picks</div>
    <div class="swiper-container">
        <div class="swiper-scrollbar"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
        <div id="jobPicks" class="swiper-wrapper"></div>
        <div class="swiper-pagination"></div>
    </div>

    @Html.Partial("~/Views/Feeds/_PostedFeed.cshtml", Model.Feeds)

    <div id="professionFeed"></div>
    <div id="userProfileFeeds"></div>

    <script src="~/Content/Scripts/swiper.min.js"></script>
    <script>
        loadSwiper = function()
        {
            var swiper = new Swiper('.swiper-container', {
                spaceBetween: 53,
                slidesPerView: 1,
                centeredSlides: true,
                slideToClickedSlide: true,
                grabCursor: true,
                nextButton: '.swiper-button-next',
                prevButton: '.swiper-button-prev',
                //scrollbar: '.swiper-scrollbar',
                pagination: '.swiper-pagination',
            });
        }
        //loadSwiper();
        $(window).ready(function () {
            $.ajax({
                url: "/Profile/GetUserDetails",
                type: "GET",
                success: function (data) {
                    var profession = data["PreferredProfession"];
                    var field = data["Field"];
                    var location = data["PreferredWorkArea"];
                    if (navigator.onLine)
                        loadFeeds(profession, field, location);
                },
                error: function () {
                }
            });

            /*$.ajax({
                url: "/Feeds/GetUserProfileFeeds",
                type: "GET",
                success: function (html) {
                    $("#userProfileFeeds").html(html);
                    $(".rightPane").html(html);
                },
                error: function () {
                }
            });*/
        });

        function loadFeeds(profession, field, location) {
            $.ajax({
                url: "/Feeds/GetBannerFeeds_CareerJet",
                type: "GET",
                data: { keywords: profession, location: location, pageSize: $("#pageSize").val() },
                dataType: "HTML",
                success: function (html) {
                    $("#jobPicks").html(html); loadSwiper();
                },
                error: function () {
                    console.log("error on profession")
                }
            });

            /*$.ajax({
                url: "/Feeds/GetFeeds_CareerJet",
                type: "GET",
                data: { keywords: "Graduate " + field, location: location, pageSize: $("#pageSize").val() },
                dataType: "HTML",
                success: function (html) {
                    $("#professionFeed").append(html);
                },
                error: function () {
                    console.log("error on profession")
                }
            });*/
        }
    </script>
